<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_parameter_set_in_common_use_param_title"
                style="@style/tv_parameter_set_param_title_style"
                android:text="@string/in_common_use_param" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="105"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_load_operating_mode_set_title"
                        style="@style/tv_parameter_set_param_name_title_style"
                        android:text="@string/load_operating_mode_set" />

                    <EditText
                        android:id="@+id/tv_parameter_load_operating_mode_set_value"
                        style="@style/tv_parameter_set_param_value_title_style"
                        android:text="@string/load_operating_mode_val10h" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:background="@color/light_gray_line" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="145"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_optical_control_delay_time_set_title"
                        style="@style/tv_parameter_set_param_name_title_style"
                        android:text="@string/optical_control_delay_time_set" />

                    <EditText
                        android:id="@+id/tv_parameter_optical_control_delay_time_set_value"
                        style="@style/tv_parameter_set_param_value_title_style"
                        android:text="10" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:background="@color/light_gray_line" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="105"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_optical_control_voltage_set_title"
                        style="@style/tv_parameter_set_param_name_title_style"
                        android:text="@string/optical_control_voltage_set" />

                    <EditText
                        android:id="@+id/tv_parameter_optical_control_voltage_set_value"
                        style="@style/tv_parameter_set_param_value_title_style"
                        android:text="5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_parameter_set_in_senior_use_param_title"
                style="@style/tv_parameter_set_param_title_style"
                android:text="@string/in_senior_use_param" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/light_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_first_working_time_set_title"
                    style="@style/tv_parameter_set_param_name_title_left_style"
                    android:layout_weight="1"
                    android:text="@string/first_working_time_set" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray_line" />

                <EditText
                    android:id="@+id/tv_parameter_first_working_time_set_value"
                    style="@style/tv_parameter_set_param_value_title_right_style"
                    android:layout_weight="1"
                    android:text="4" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_first_working_power_set_title"
                    style="@style/tv_parameter_set_param_name_title_left_style"
                    android:layout_weight="1"
                    android:text="@string/first_working_power_set" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray_line" />

                <EditText
                    android:id="@+id/tv_parameter_first_working_power_set_value"
                    style="@style/tv_parameter_set_param_value_title_right_style"
                    android:layout_weight="1"
                    android:text="100" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_second_working_time_set_title"
                    style="@style/tv_parameter_set_param_name_title_left_style"
                    android:layout_weight="1"
                    android:text="@string/second_working_time_set" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray_line" />

                <EditText
                    android:id="@+id/tv_parameter_second_working_time_set_value"
                    style="@style/tv_parameter_set_param_value_title_right_style"
                    android:layout_weight="1"
                    android:text="0" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_second_working_power_set_title"
                    style="@style/tv_parameter_set_param_name_title_left_style"
                    android:layout_weight="1"
                    android:text="@string/second_working_power_set" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray_line" />

                <EditText
                    android:id="@+id/tv_parameter_second_working_power_set_value"
                    style="@style/tv_parameter_set_param_value_title_right_style"
                    android:layout_weight="1"
                    android:text="75" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_third_working_time_set_title"
                    style="@style/tv_parameter_set_param_name_title_left_style"
                    android:layout_weight="1"
                    android:text="@string/third_working_time_set" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray_line" />

                <EditText
                    android:id="@+id/tv_parameter_third_working_time_set_value"
                    style="@style/tv_parameter_set_param_value_title_right_style"
                    android:layout_weight="1"
                    android:text="4" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_third_working_power_set_title"
                    style="@style/tv_parameter_set_param_name_title_left_style"
                    android:layout_weight="1"
                    android:text="@string/third_working_power_set" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray_line" />

                <EditText
                    android:id="@+id/tv_parameter_third_working_power_set_value"
                    style="@style/tv_parameter_set_param_value_title_right_style"
                    android:layout_weight="1"
                    android:text="50" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_morning_working_time_set_title"
                    style="@style/tv_parameter_set_param_name_title_left_style"
                    android:layout_weight="1"
                    android:text="@string/morning_working_time_set" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray_line" />

                <EditText
                    android:id="@+id/tv_parameter_morning_working_time_set_value"
                    style="@style/tv_parameter_set_param_value_title_right_style"
                    android:layout_weight="1"
                    android:text="0" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_morning_working_power_set_title"
                    style="@style/tv_parameter_set_param_name_title_left_style"
                    android:layout_weight="1"
                    android:text="@string/morning_working_power_set" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray_line" />

                <EditText
                    android:id="@+id/tv_parameter_morning_working_power_set_value"
                    style="@style/tv_parameter_set_param_value_title_right_style"
                    android:layout_weight="1"
                    android:text="25" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>