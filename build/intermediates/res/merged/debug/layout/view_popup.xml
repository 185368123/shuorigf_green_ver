<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="111dp"
        android:layout_height="136dp"
        android:layout_marginRight="20dp"
        android:background="@color/light_yellow"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvAddDevice"
            style="@style/item_popup_layout_text_content_style"
            android:layout_width="111dp"
            android:layout_height="34dp"
            android:text="@string/added_device" />
        <View
            android:layout_width="111dp"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tvGetAdmin"
            style="@style/item_popup_layout_text_content_style"
            android:layout_width="111dp"
            android:layout_height="34dp"
            android:text="@string/get_admin" />
        <View
            android:layout_width="111dp"
            android:layout_height="1dp"
            android:background="@color/white" />
        <TextView
            android:id="@+id/tvModifyPwd"
            style="@style/item_popup_layout_text_content_style"
            android:layout_width="111dp"
            android:layout_height="34dp"
            android:text="@string/update_password" />
        <View
            android:layout_width="111dp"
            android:layout_height="1dp"
            android:background="@color/white" />
        <TextView
            android:id="@+id/tvCheckUpdate"
            style="@style/item_popup_layout_text_content_style"
            android:layout_width="111dp"
            android:layout_height="34dp"
            android:text="@string/check_update" />
    </LinearLayout>

